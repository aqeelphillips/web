<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Password hash</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', ["v1", user] %></td>
    <td><%= link_to 'Destroy', ["v1", user], :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

