<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.tag_text %></td>
    <td><%= link_to 'Show', ["api", "v1", tag] %></td>
    <td><%= link_to 'Destroy', ["api", "v1", tag], :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

